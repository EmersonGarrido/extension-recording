{
  "manifest_version": 3,
  "name": "Screen Recorder",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabCapture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}